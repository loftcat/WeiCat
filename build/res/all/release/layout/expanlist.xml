<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/commentlist_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_0" />

    <com.loftcat.ui.utils.PullToRefreshView
        android:id="@+id/friends_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/friendslist_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@null"
            android:childDivider="#00000000"
            android:divider="#80aaaaaa"
            android:dividerHeight="1dp"
            android:groupIndicator="@null" >
        </ExpandableListView>
    </com.loftcat.ui.utils.PullToRefreshView>

    <ProgressBar
        android:id="@+id/comment_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout><!-- From: file:/Users/verysunny/git/WeiCat/res/layout/expanlist.xml -->